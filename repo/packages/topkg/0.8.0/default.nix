  configurePhase = "true";
  installPhase = "${opam2nix}/bin/opam2nix invoke install";
  name = "topkg-0.8.0";
  opamEnv = builtins.toJSON 
  {
    deps = opamDeps;
    files = null;
    name = "topkg";
    ocaml-version = world.ocamlVersion;
    spec = ./opam;
  };
  passthru = 
  {
    opamSelection = opamSelection;
  };
  propagatedBuildInputs = inputs;
  src = fetchurl 
  {
    sha256 = "0m6pj8m27c4l4gma1332wsyl3hr9ghpc4s839g62j9n3j7cpjll5";
    url = "http://erratique.ch/software/topkg/releases/topkg-0.8.0.tbz";
  };
  unpackCmd = "tar -xf \"$curSrc\"";
}

