  configurePhase = "true";
  installPhase = "${opam2nix}/bin/opam2nix invoke install";
  name = "ocamllint-0.3.0";
  opamEnv = builtins.toJSON 
  {
    deps = opamDeps;
    files = null;
    name = "ocamllint";
    ocaml-version = world.ocamlVersion;
    spec = ./opam;
  };
  passthru = 
  {
    opamSelection = opamSelection;
  };
  propagatedBuildInputs = inputs;
  src = fetchurl 
  {
    sha256 = "1lpryyv0p87s0kk17ynvkh0j8d12hmdzrkjjnqzkrg6l9n4ivfc9";
    url = "https://github.com/cryptosense/ocamllint/archive/v0.3.0.tar.gz";
  };
