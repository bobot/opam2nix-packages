#!bash -eu
cd "$(dirname "$2")"
local_repo="$(cd ../opam-repository && pwd)"
gup -u release.opam-repository.commit
rev="$(cat release.opam-repository.commit)"
"$(nix-build --no-out-link -A nix-update-source '<nixpkgs>')"/bin/nix-update-source \
	-o "$1" \
	--set type fetchgit \
	--set rev "$rev" \
	--set url "$local_repo" \
	--substitute url "https://github.com/opam/opam-repository.git" \
	;

